---
import { Image } from 'astro:assets';
---

<div class="fixed left-1/2 top-0 ml-[-80rem] h-[16rem] sm:h-[24rem] w-[200rem] [mask-image:linear-gradient(white,transparent)] -z-50">
  <div class="absolute inset-0 bg-gradient-to-r from-[#A78BFA]/20 to-[#7C3AED]/20 opacity-40 [mask-image:radial-gradient(farthest-side_at_top,white,transparent)] dark:from-[#7C3AED]/20 dark:to-[#6D28D9]/30 dark:opacity-100"></div>
</div>
<div class="z-10 grow flex flex-col">
  <header class="w-full flex justify-center fixed p-0 top-[-1px] sm:top-0 sm:p-4 z-[100]">
    <nav class="rounded-none sm:rounded-full border-b sm:border sm:shadow-[0_4px_8px_rgba(0,0,0,0.03)] sm:dark:shadow-[0_4px_8px_rgba(0,0,0,0.2)] bg-white/60 dark:bg-black/30 border-gray-300/50 dark:border-gray-400/10 p-3 backdrop-blur-md w-full m-auto max-w-[920px] flex justify-between items-center">
      <button
        type="button"
        aria-label="Go to home"
        class="circle-button"
      >
        <p class="text-center text-sm font-bold font-sans -tracking-[1px] text-violet-500">S.D</p>
      </button>
      <div class="flex flex-row items-center justify-end space-x-4">
        <ul class="flex text-sm">
          <li><a href="/" class="button-link">About</a></li>
          <li><a href="/about" class="button-link">Thinking</a></li>
          <li><a href="/blog" class="button-link">Work</a></li>
        </ul>

        <button
          type="button"
          aria-label="Go to home"
          class="circle-button"
        >
        <Image
          src="/icons/basil_sun-outline.svg"
          alt="Stiven Dev"
          width="20"
          height="20"
        />
        </button>
      </div>
    </nav>
  </header>
</div>